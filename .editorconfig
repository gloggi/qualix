root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,json}]
indent_size = 2

[lang/**.php]
insert_final_newline = false
indent_style = tab
tab_width = 4
trim_trailing_whitespace = true

[*.{vue,js}]
indent_size = 2
